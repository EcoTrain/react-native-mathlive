{
  "name": "react-native-mathlive",
  "version": "0.1.0",
  "description": "Beautiful display and editing of formulas",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-mathlive.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "prepare": "bob build",
    "example": "yarn --cwd example",
    "typescript": "tsc --noEmit",
    "lint": "eslint . --fix --ignore-path .eslintignore",
    "release": "release-it",
    "bootstrap": "yarn example && yarn && yarn example pods",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --coverage",
    "test:badges": "yarn test:coverage  && jest-coverage-badges",
    "np": "np --no-publish",
    "postversion": "react-native-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coprocoder/react-native-mathlive"
  },
  "author": "coprocoder <mog.ie@mail.ru> (https://github.com/coprocoder)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coprocoder/react-native-mathlive/issues"
  },
  "homepage": "https://github.com/coprocoder/react-native-mathlive#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/preset-react": "^7.18.6",
    "@commitlint/config-conventional": "^17.1.0",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/react-native": "^11.0.0",
    "@types/jest": "^28.1.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.68.0",
    "commitlint": "^17.1.2",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.2",
    "jest-coverage-badges": "^1.1.2",
    "np": "^7.6.2",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-builder-bob": "^0.18.3",
    "react-native-version": "^4.0.0",
    "react-test-renderer": "17.0.2",
    "release-it": "^15.0.0",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
